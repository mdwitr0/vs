# Production Environment Variables Template
# Copy to .env.prod and fill in secure values

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=<generate-20-char-password>
MONGO_DB=video_analitics

# Redis
REDIS_PASSWORD=<generate-20-char-password>

# Meilisearch
MEILI_MASTER_KEY=<generate-20-char-password>

# JWT & Auth
JWT_SECRET=<generate-64-char-secret>
ADMIN_LOGIN=admin
ADMIN_PASSWORD=<generate-20-char-password>

# Internal API
INTERNAL_API_TOKEN=<generate-20-char-password>

# Parser settings
WORKER_COUNT=10
HTML_CACHE_TTL=24h
PAGE_LOAD_DELAY=2s
CRAWL_RATE_LIMIT=2s
